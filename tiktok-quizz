<body>

<div class="container">
    <h1>What is this called?</h1>

    <!-- مكان الصورة -->
    <div class="placeholder"></div>

    <!-- العداد -->
    <div class="timer-circle">
        <svg width="120" height="120">
            <circle class="bg" cx="60" cy="60" r="50"></circle>
            <circle class="progress" cx="60" cy="60" r="50"></circle>
        </svg>
        <div class="time-text" id="time">5</div>
    </div>

    <div class="answer" id="answer"></div>

    <div class="fullscreen-btn" onclick="openFullscreen()">⛶</div>
</div>

<script>
const words = ["Spoon", "Key", "Watch", "Umbrella", "Scissors"];
let index = 0;
let time = 5;
const circle = document.querySelector(".progress");
const timeText = document.getElementById("time");
const answer = document.getElementById("answer");
const circumference = 314;

function startRound() {
    time = 5;
    answer.style.display = "none";
    answer.textContent = words[index];
    timeText.textContent = time;
    circle.style.strokeDashoffset = 0;

    const interval = setInterval(() => {
        time--;
        timeText.textContent = time;
        circle.style.strokeDashoffset =
            circumference - (circumference * time) / 5;

        if (time === 0) {
            answer.style.display = "block";
        }

        if (time < 0) {
            clearInterval(interval);
            index++;
            if (index < words.length) {
                startRound();
            }
        }
    }, 1000);
}

startRound();

/* ملء الشاشة */
function openFullscreen() {
    if (document.documentElement.requestFullscreen) {
        document.documentElement.requestFullscreen();
    }
}
</script>

</body>
